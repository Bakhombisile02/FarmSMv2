@{
    ViewBag.Title = "FarmCentral - Online Farm Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Global Styles */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-image: url("/img/1.jpg");
        background-size: cover;
    }

    /* Page Styles */
    h2 {
        color: #333;
        font-size: 28px;
        margin-bottom: 20px;
    }

    p {
        color: #777;
        font-size: 16px;
        line-height: 1.5;
    }

    /* Sections */
    section {
        padding: 40px 0;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.8);
    }

    #about {
        margin-top: 50px;
    }

    /* Content Styles */
    .about-content,
    .products-content,
    .contact-content {
        max-width: 600px;
        margin: 0 auto;
    }

    /* Product Styles */
    .product-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 20px;
    }

    .product {
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 20px;
        width: 200px;
    }

        .product img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        .product h3 {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .product p {
            color: #777;
            font-size: 14px;
        }
</style>

<h2 style="color:white">Welcome to FarmCentral</h2>
<p style="color:white">Your one-stop shop for fresh farm produce.</p>

<section id="about">
    <div class="about-content">
        <h2>About Us</h2>
        <p>At FarmFresh, we are committed to providing the highest quality organic produce directly from our farm to your table. With a focus on sustainable farming practices, we ensure that our products are not only delicious but also good for the environment.</p>
    </div>
</section>

<section id="products">
    <div class="products-content">
        <h2>Our Products</h2>
        <p>Explore our wide range of fresh fruits, vegetables, dairy products, and more.</p>

        <div class="product-list">
            <div class="product">
                <img src="~/img/fruit.jpg" alt="Product 1">
                <h3>Product 1</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                <a href="#" class="cta-btn">Add to Cart</a>
            </div>
            <div class="product">
                <img src="~/img/Milk.jpg" alt="Product 2">
                <h3>Product 2</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                <a href="#" class="cta-btn">Add to Cart</a>
            </div>
           
        </div>
    </div>
</section>

<section id="join">
    <div class="about-content">
        <h2>Become an Employee</h2>
        <p>At FarmFresh, we are committed to providing the highest quality organic produce directly from our farm to your table. With a focus on sustainable farming practices, we ensure that our products are not only delicious but also good for the environment.</p>
    </div>
    <div>
        @Html.ActionLink("join Us", "Register")
    </div>
</section>
