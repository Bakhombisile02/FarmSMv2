<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/mycss.css" />
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar {
            background-color: black;
            padding: 1rem;
        }

        .navbar-brand {
            color: #ffffff;
            font-weight: bold;
        }

        .navbar-toggler {
            border: none;
            color: #ffffff;
            font-size: 1.2rem;
            padding: 0;
        }

        .navbar-nav {
            flex-direction: row;
        }

        .nav-item {
            margin-left: 1rem;
        }

        .nav-link {
            color: white;
            font-size: 1rem;
            text-decoration: none;
        }

            .nav-link:hover {
                text-decoration: underline;
            }

        .welcome-text {
            color: white;
            margin-top: 15px;
        }

        .login-links {
            margin-left: auto;
        }

            .login-links .nav-item {
                margin-left: 1rem;
            }

        .footer {
            margin-top: 2rem;
            text-align: center;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm">
        <div class="container">
            @Html.ActionLink("Farm Central", "Welcome", "Home", null, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                &#9776;
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto login-links">
                    @if (Session["Seshuser"] != null)
                    {
                        <li class="nav-item welcome-text">Welcome @Session["Seshuser"]</li>
                        <li class="nav-item" style="color: red">@Html.ActionLink("Logout", "Logout", "Home", null, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("Login Employee", "EmployeeLogin", "Home", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Login Farmer", "FarmerLogin", "Home", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Register", "Register", "Home", null, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer">
            <p style="color:white">&copy; @DateTime.Now.Year - st10082221 Farm Central</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
